<div class="col-md-12" ng-controller="truckOwnerPostsCtrl">
	<div class="bs-component">
		<div class="panel panel-success">
			<div class="panel-heading">
				<h3 class="panel-title">My Posts</h3>
			</div>
			<div class="panel-body">
				<div id="myTruckPostListMessage" ng-show="!myTruckPostList.listShow||myTruckPostList.messageAvailable">
					<div id="myTruckPostlist_alert" ></div>
				</div>
				<div ng-show="myTruckPostList.listShow" class="gridMaxStyle" ng-grid="myTruckPostList.gridOptions"></div>
			</div>
		</div>
	</div>
</div>
<!-- Remove Truck Post Confirmation Modal -->
<script type="text/ng-template" id="myTruckPostRemoveModal.html">
	<!-- div ng-controller="TruckPostRemoveModalCtrl" -->
	<div class="modal-header">
		<h3 class="modal-title">Remove Truck Confirmation</h3>
	</div>
	<div class="modal-body">
		<div id="remove_truck_post_alert"></div>
		<form name="removeTruckPostForm" id="removeTruckPostForm">
			<div class="form-group">
				<div class="row">
					<div class="col-md-6 col-md-offset-1">Do you want to remove this post?</div>
					<div class="col-md-12 col-md-offset-1">
						<table class="table">
							<thead>
							<tr>
								<th>Reg No</th>
								<th>Available Ton</th>
								<th>Available Date</th>
							</tr>
							</thead>
							<tbody>
							<tr>
								<td>{{truckPostToInactivate.reg_no}}</td>
								<td>{{truckPostToInactivate.available_ton}}</td>
								<td>{{truckPostToInactivate.available_date}}</td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<button type="button" ng-if="!showClose" class="btn btn-danger" ng-click="inActivateTruckPost(truckPostToInactivate)">Yes</button>
			<button type="button" ng-if="!showClose" class="btn btn-default pull-right" ng-click="cancel()">Cancel</button>
		</form>
	</div>
	<div class="modal-footer" ng-if="showClose">
		<!-- button type="button" class="btn btn-danger">Yes</button -->
		<button class="btn btn-warning" ng-click="cancel()">Close</button>
	</div>
	<!-- /div -->
</script>
<script src="truck_owner_posts.js"></script>