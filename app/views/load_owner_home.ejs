<div class="page-header" id="load_owner" ng-controller="loadOwnerCtrl">
	<div class="bs-docs-section">
		<div id="myLoadList_alert"></div>
		<div class="row">
			<div class="col-lg-11">
				<div class="col-md-12">
					<div class="bs-component">
						<div class="panel panel-success">
							<div class="panel-heading">
								<h3 class="panel-title">My Loads</h3>
							</div>
							<div class="panel-body">
								<div id="myLoadListMessage" ng-show="!myLoadList.listShow">
									<div id="myLoadList_alert" ></div>
								</div>
								<div ng-show="myLoadList.listShow" class="gridMaxStyle" ng-grid="myLoadList.gridOptions"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Remove Load Confirmation Modal -->
<script type="text/ng-template" id="myLoadRemoveModal.html">
	<!-- div ng-controller="TruckLoadModalCtrl" -->
	<div class="modal-header">
		<h3 class="modal-title">Remove Load Confirmation</h3>
	</div>
	<div class="modal-body">
		<div id="remove_load_alert"></div>
		<form name="removeLoadForm" id="removeLoadForm">
			<div class="form-group">
				<div class="row">
					<div class="col-md-6 col-md-offset-1">Do you want to remove this load?</div>
					<div class="col-md-12 col-md-offset-1">
						<table class="table">
							<thead>
							<tr>
								<th>From</th>
								<th>To</th>
								<th>Material</th>
								<th>Load</th>
								<th>Pickup Date</th>
							</tr>
							</thead>
							<tbody>
							<tr>
								<td>{{loadToInactivate.source}}</td>
								<td>{{loadToInactivate.destination}}</td>
								<td>{{loadToInactivate.material}}</td>
								<td>{{loadToInactivate.load}}</td>
								<td>{{loadToInactivate.pickupDate}}</td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<button type="button" ng-if="!showClose" class="btn btn-danger" ng-click="inActivateLoad(loadToInactivate)">Yes</button>
			<button type="button" ng-if="!showClose" class="btn btn-default pull-right" ng-click="cancel()">Cancel</button>
		</form>
	</div>
	<div class="modal-footer" ng-if="showClose">
		<!-- button type="button" class="btn btn-danger">Yes</button -->
		<button class="btn btn-warning" ng-click="cancel()">Close</button>
	</div>
	<!-- /div -->
</script>
<!-- Load Details Modal -->
<script type="text/ng-template" id="myLoadDetailModal.html">
	<!-- div ng-controller="LoadDetailModalCtrl" -->
	<!-- div class="modal-dialog">
		<div class="modal-content" -->
	<div class="modal-header">
		<h3 class="modal-title">Load Information</h3>
	</div>
	<div class="modal-body">
		<div id="load_detail_alert"></div>
		<div class="row">
			<div class="col-sm-4">
				<div class="col-xs-5 col-sm-12">
					<h4>Owner Details</h4>
					<ul class="profile-details">
						<li>
							<div><i class="fa fa-user"></i> Name</div>
							{{loadModal.owner.name}}
						</li>
						<li>
							<div><i class="fa fa-map-marker"></i> Address</div>
							<p class="nopadding">{{loadModal.owner.address.line1}}</p>
							<p class="nopadding" ng-if="showText(loadModal.owner.address.line2)">{{loadModal.owner.address.line2}}</p>
							<p class="nopadding">{{loadModal.owner.address.city}}</p>
							<p class="nopadding">{{loadModal.owner.address.state}}</p>
							<p class="nopadding">{{loadModal.owner.address.country}}</p>
							<p class="nopadding">{{loadModal.owner.address.pincode}}</p>
						</li>
						<li>
							<div><i class="fa fa-phone"></i> Contact</div>
							{{loadModal.owner.contact}}
						</li>
					</ul>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="col-xs-5 col-sm-12">
					<h4>Company Details</h4>
					<ul class="profile-details">
						<li>
							<div><i class="fa fa-user"></i> Name</div>
							{{loadModal.company.name}}
						</li>
						<li>
							<div><i class="fa fa-map-marker"></i> Address</div>
							<p class="nopadding">{{loadModal.company.address.line1}}</p>
							<p class="nopadding" ng-if="showText(loadModal.company.address.line2)">{{loadModal.company.address.line2}}</p>
							<p class="nopadding">{{loadModal.company.address.city}}</p>
							<p class="nopadding">{{loadModal.company.address.state}}</p>
							<p class="nopadding">{{loadModal.company.address.country}}</p>
							<p class="nopadding">{{loadModal.company.address.pincode}}</p>
						</li>
						<li>
							<div><i class="fa fa-phone"></i> Contact</div>
							{{loadModal.company.contact}}
						</li>
					</ul>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="col-xs-5 col-sm-12">
					<h4>Load Details</h4>
					<ul class="profile-details">
						<li>
							<div><i class="fa fa-suitcase"></i> Quantity/ Weight</div>
							{{loadModal.load.quantity}}
						</li>
						<li>
							<div><i class="fa fa-cube"></i> Material</div>
							{{loadModal.load.material.type}} <br/>
						</li>
						<li>
							<div><i class="fa fa-map-marker"></i> Pickup City</div>
							{{loadModal.load.pickup.address.city}} <br/>
						</li>
						<li>
							<div><i class="fa fa-map-marker"></i> Delivery City</div>
							{{loadModal.load.delivery.address.city}}
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</script>
