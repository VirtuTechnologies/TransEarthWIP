<div id="load_owner" ng-controller="loadOwnerCtrl">
    <form id="myLoadForm" name="myLoadForm" role="form">
        <div class="myloadpane loadpagepane" >
        <!-- input type="textbox" class="" name="myloadsearch"
               ng-model="myLoadList.myLoads_filter"
               value="" placeholder="Search" /></div -->
            <div ng-show="myLoadList.messageAvailable">
                <div id="myLoadList_alert"></div>
            </div>
            <div class="div-header">
                <img class="pane-icon" src="images/load.png" alt="" />
                <h4>My Loads ({{myLoadList.totalServerItems}})</h4>
                <input type="textbox" class="searchbox" name="mytrucksearch"
                       ng-model="myLoadList.myLoads_filter"
                       value="" placeholder="Search" />
                <button><img src="images/search-btn-white.png" alt="Search" /></button>
            </div>
            <div class="posts-load" >
                <ul ng-show="myLoadList.listShow" ng-repeat="load in myLoadList.list  | filter:myLoadList.myLoads_filter"
                    class="runtime-load-div slide-right">
                    <!-- img class="runtime-icon" src="images/load.png" alt="" / -->
                    <li class="runtime-icon">
                        <button ng-click="editLoad(load.load_id)"><img class="edit-icon" src="images/edit-w.png" alt="" />Edit</button>
                        <button ng-click="removeLoad(load.load_id, load.source, load.destination, load.load, load.material, load.pickupDate)"><img class="edit-icon" src="images/delete-w.png" alt="" />Delete</button>
                        <button ng-click="viewLoad(load.load_id)"><img class="view-action" src="images/view.png" alt="" />View</button>
                    </li>
                    <!-- li class="runtime-icon">
                        <b>
                            <a href="#" ng-click="getTruckDetails(truck.truck_id)">
                                <img src="images/view.png" class="view-action" alt=""
                                     ng-click="viewLoad(post.load_id)"/>
                            </a>
                        </b>
                    </li -->
                    <li class="runtime-load-details">From: {{load.source}}</li>
                    <li class="runtime-load-details">To: {{load.destination}}</li>
                    <li class="runtime-load-details">Load: {{load.load}}</li>
                    <li class="runtime-load-details">Material: {{load.materialType}}</li>
                    <li class="runtime-load-details">Pickup: {{load.pickupDate}}</li>
                </ul>
            </div>
        </div>
    </form>
</div>
<!-- Remove Load Confirmation Modal -->
<script type="text/ng-template" id="myLoadRemoveModal.html">
    <!-- div ng-controller="TruckLoadModalCtrl" -->
    <div class="modal-header">
        <h3 class="modal-title">Remove Load Confirmation</h3>
    </div>
    <div class="modal-body">
        <div id="remove_load_alert"></div>
        <form name="removeLoadForm" id="removeLoadForm">
            <div class="form-group">
                <div class="row">
                    <div ng-if="!showClose" class="col-md-6 col-md-offset-1">Do you want to remove this load?</div>
                    <div class="col-md-12 col-md-offset-1">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>From</th>
                                <th>To</th>
                                <th>Material</th>
                                <th>Load</th>
                                <th>Pickup Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>{{loadToInactivate.source}}</td>
                                <td>{{loadToInactivate.destination}}</td>
                                <td>{{loadToInactivate.material}}</td>
                                <td>{{loadToInactivate.load}}</td>
                                <td>{{loadToInactivate.pickupDate}}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <button type="button" ng-if="!showClose" style="background-color: rgb(0, 132, 255);" class="buttons" ng-click="inActivateLoad(loadToInactivate)">Yes</button>
            <button type="button" ng-if="!showClose" style="background-color: rgb(45, 45, 45);" class="buttons" ng-click="cancel()">Cancel</button>
        </form>
    </div>
    <div class="modal-footer" ng-if="showClose">
        <!-- button type="button" class="btn btn-danger">Yes</button -->
        <button style="background-color: rgb(45, 45, 45);"  class="buttons" ng-click="cancel()">Close</button>
    </div>
    <!-- /div -->
</script>
<script src="load_owner.js"></script>