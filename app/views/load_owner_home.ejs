<div id="load_owner" ng-controller="loadOwnerCtrl">

    <form id="myLoadForm" name="myLoadForm" role="form">
        <!--div class="load-search">
        < input type="textbox" class="" name="myloadsearch"
               ng-model="myLoadList.myLoads_filter"
               value="" placeholder="Search" /></div -->
<div ng-show="myLoadList.messageAvailable"></div>
        <div class="myloadpane pagepane" >
            <div class="div-header">
                <img class="pane-icon" src="images/truck.png" alt="" />
                <h4>My Trucks <span>({{myLoadList.totalServerItems}})</span></h4>
                <input type="textbox" class="searchbox" name="mytrucksearch"
                       ng-model="myTrucks_filter"
                       value="" placeholder="Search" />
                <button><img src="images/search-btn-white.png" alt="Search" /></button>
            </div>
            <div class="posts-load" >
                <ul ng-show="myLoadList.list" ng-repeat="load in myLoadList.list  | filter:myLoadList.myLoads_filter"
                    class="runtime-load-div slide-right">
                    <img class="runtime-icon" src="images/truck.png" alt="" />
                    <li class="runtime-load-details"><b><a href="#" ng-click="getTruckDetails(truck.truck_id)">{{load.source}}</a></b></li>
                    <li class="runtime-load-details">{{load.destination}}</li>
                    <li class="runtime-load-details">{{load.load}}</li>
                    <li class="runtime-load-details">{{load.materialType}}</li>
                    <li class="runtime-load-details">{{load.pickupDate}}</li>
                    <li class="runtime-load-options">
                        <button ng-click="addTruckPost(truck.truck_id)"><img class="edit-icon" src="images/add-w.png" alt="" />Post</button>
                        <button ng-click="editTruck(truck.truck_id)"><img class="edit-icon" src="images/edit-w.png" alt="" />Edit</button>
                        <button ng-click="removeTruck(truck.truck_id, truck.regNo)"><img class="edit-icon" src="images/delete-w.png" alt="" />Delete</button>
                    </li>
                </ul>
            </div>
        </div>
    </form>
</div>
<!-- Remove Load Confirmation Modal -->
<script type="text/ng-template" id="myLoadRemoveModal.html">
    <!-- div ng-controller="TruckLoadModalCtrl" -->
    <div class="modal-header">
        <h3 class="modal-title">Remove Load Confirmation</h3>
    </div>
    <div class="modal-body">
        <div id="remove_load_alert"></div>
        <form name="removeLoadForm" id="removeLoadForm">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6 col-md-offset-1">Do you want to remove this load?</div>
                    <div class="col-md-12 col-md-offset-1">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>From</th>
                                <th>To</th>
                                <th>Material</th>
                                <th>Load</th>
                                <th>Pickup Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>{{loadToInactivate.source}}</td>
                                <td>{{loadToInactivate.destination}}</td>
                                <td>{{loadToInactivate.material}}</td>
                                <td>{{loadToInactivate.load}}</td>
                                <td>{{loadToInactivate.pickupDate}}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <button type="button" ng-if="!showClose" class="btn btn-danger" ng-click="inActivateLoad(loadToInactivate)">Yes</button>
            <button type="button" ng-if="!showClose" class="btn btn-default pull-right" ng-click="cancel()">Cancel</button>
        </form>
    </div>
    <div class="modal-footer" ng-if="showClose">
        <!-- button type="button" class="btn btn-danger">Yes</button -->
        <button class="btn btn-warning" ng-click="cancel()">Close</button>
    </div>
    <!-- /div -->
</script>
<script src="load_owner.js"></script>