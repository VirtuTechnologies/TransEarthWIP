<div ng-controller="indexCtrl">
	<div class="truckdetails">
		<div class="slider">
			<p class="nameplace trucks"><img id="profilepic" src="images/truck.png" alt=""><a href="#">Trucks Posts</a></p>
			<ul class="truckdetailpane">
				<li ng-repeat="post in truckPosts" class="infos" ng-class="truckPosting.animation" ng-show="1==1">
					From: &nbsp; {{post.source}}<br/>
					To: &nbsp; {{post.destination}}<br/>
					Capacity: &nbsp; {{post.capacity}}<br/>
					Date: &nbsp; {{post.availableDate}}<br/>
				</li>
			</ul>
		</div>
		<ul class="button-opt">
			<li class="find-more-btn" style="padding-right: 60px;"><input class="button-option" type="submit" name="findmore" ng-click="searchTrucks()" value="FIND MORE"></li>
			<li class="view-more-btn"><input class="button-option" type="submit" name="viewthis" value="VIEW THIS TRUCK"></li>
		</ul>
	</div>
	<div class="loaddetails">
		<div class="slider">
			<p class="nameplace"><img id="profilepic" src="images/load.png" alt=""><a href="#">Load Posts</a></p>
			<ul class="loaddetailpane">
				<li ng-repeat="post in loadPosts" ng-class="loadPosting.animation" class="infos" ng-show="1==1">
					From: &nbsp; {{post.source}}<br/>
					To: &nbsp; {{post.destination}}<br/>
					Capacity: &nbsp; {{post.load}}<br/>
					Material: &nbsp; {{post.materialType}}<br/>
					Date: &nbsp; {{post.pickupDate}}<br/>
				</li>
			</ul>
		</div>
		<ul class="button-opt">
			<li class="find-more-btn" style="padding-right: 65px;"><input class="button-option" type="submit" name="findmore" ng-click="searchTrucks()" value="FIND MORE"></li>
			<li class="view-more-btn"><input class="button-option" type="submit" name="viewthis" value="VIEW THIS LOAD"></li>
		</ul>
	</div>
</div>
<script src="index.js"></script>