<div ng-controller="truckOwnerTrucksCtrl">
	<div class="mytruckpane pagepane">
		<div class="div-header">
			<img class="pane-icon" src="images/mytruck.png" alt="" />
			<h4>My Trucks <span>(12)</span></h4>
			<input type="textbox" class="searchbox" name="mytrucksearch" Value="" placeholder="Search" />
			<button><img src="images/search-btn.png" alt="Search" /></button>
		</div>
		<div class="posts">
			<ul ng-repeat="truck in myTruckList.list" class="runtime-div">
				<img class="runtime-icon" src="images/mytruck.png" alt="" />
				<li class="runtime-details"><b>{{truck.regNo}}</b></li>
				<li class="runtime-details">{{truck.make}} - {{truck.model}}</li>
				<li class="runtime-details">{{truck.capacity}}</li>
				<li class="runtime-options">
					<button><img class="edit-icon" src="images/add.png" alt="" />Add</button>
					<button><img class="edit-icon" src="images/edit.png" alt="" />Edit</button>
					<button><img class="edit-icon" src="images/delete.png" alt="" />Delete</button>
				</li>
			</ul>
		</div>
	</div>
	<div class="mypostpane pagepane">
		<div class="div-header">
			<img class="pane-icon" src="images/posts.png" alt="" />
			<h4>My Posts <span>(22)</span></h4>
			<input type="textbox" class="searchbox" name="mytrucksearch" Value="" placeholder="Search" />
			<button><img src="images/search-btn.png" alt="Search" /></button>
		</div>
		<div class="posts">
			<ul ng-repeat="post in myTruckPostList.list" class="runtime-div">
				<img class="runtime-icon" src="images/mytruck.png" alt="" />
				<li class="runtime-details"><b>{{post.regNo}}</b></li>
				<li class="runtime-details">{{post.source}} - {{post.destination}}</li>
				<li class="runtime-details">{{post.availableDateDisplay}}</li>
				<li class="runtime-options">
					<button><img class="edit-icon" src="images/add.png" alt="" />Add</button>
					<button><img class="edit-icon" src="images/edit.png" alt="" />Edit</button>
					<button><img class="edit-icon" src="images/delete.png" alt="" />Delete</button>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- Remove Truck Confirmation Modal -->
<script type="text/ng-template" id="myTruckRemoveModal.html">
	<!-- div ng-controller="TruckRemoveModalCtrl" -->
		<div class="modal-header">
			<h3 class="modal-title">Remove Truck Confirmation</h3>
		</div>
		<div class="modal-body">
			<div id="remove_truck_alert"></div>
			<form name="removeTruckForm" id="removeTruckForm">
				<div class="form-group">
					<div class="row">
						<div class="col-md-6 col-md-offset-1">Do you want to remove this truck?</div>
						<div class="col-md-6 col-md-offset-3 strong">
							<h3>{{truckToInactivate.reg_no}}</h3>
						</div>
					</div>
				</div>
				<button type="button" ng-if="!showClose" class="btn btn-danger" ng-click="inActivateTruck(truckToInactivate)">Yes</button>
				<button type="button" ng-if="!showClose" class="btn btn-default pull-right" ng-click="cancel()">Cancel</button>
			</form>
		</div>
		<div class="modal-footer" ng-if="showClose">
			<!-- button type="button" class="btn btn-danger">Yes</button -->
			<button class="btn btn-warning" ng-click="cancel()">Close</button>
		</div>
	<!-- /div -->
</script>
